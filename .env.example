# Django Settings
SECRET_KEY=your-very-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
POSTGRES_DB=kookaburra_db
POSTGRES_USER=kookaburra_user
POSTGRES_PASSWORD=devpassword
DATABASE_URL=postgresql://kookaburra_user:devpassword@db:5432/kookaburra_db

# Domain (for production)
DOMAIN_NAME=kookaburra.health

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@kookaburra.health

# Security (production)
CSRF_TRUSTED_ORIGINS=https://kookaburra.health,https://www.kookaburra.health

# Sentry (optional, for production error tracking)
SENTRY_DSN=

# Redis (optional, for caching)
REDIS_URL=redis://redis:6379/1

# Django Settings Module
DJANGO_SETTINGS_MODULE=config.settings.dev